<h1>Listing Guardians</h1>

<table>
  <thead>
    <tr>
      <th>Family</th>
      <th>Relationship</th>
      <th>Relationship</th>
      <th>Active</th>
      <th>Primary</th>
      <th>Given Name 1</th>
      <th>Given Name 2</th>
      <th>Family Name 1</th>
      <th>Family Name 2</th>
      <th>Preferred Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guardians.each do |guardian| %>
      <tr>
        <td><%= guardian.family_id %></td>
        <td><%= guardian.relationship %></td>
        <td><%= guardian.relationship_id %></td>
        <td><%= guardian.active %></td>
        <td><%= guardian.primary %></td>
        <td><%= guardian.given_name1 %></td>
        <td><%= guardian.given_name2 %></td>
        <td><%= guardian.family_name1 %></td>
        <td><%= guardian.family_name2 %></td>
        <td><%= guardian.preferred_name %></td>        
        <td><%= link_to 'Show', guardian %></td>
        <td><%= link_to 'Edit', edit_guardian_path(guardian) %></td>
        <td><%= link_to 'Destroy', guardian, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

