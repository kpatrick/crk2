<%= link_to tr('edit'), edit_enrollment_path(@enrollment) %> ::
<%= link_to tr('home'), {controller: :welcome, action: :index} %> ::
<%= link_to tr('child'), @enrollment.child %>

<h1><%= tr("enrollment") %></h1>

<p id="notice"><%= notice %></p>

<p>
  <strong><%= tr("child") %>:</strong>
  <%= link_to @enrollment.try(:child).try(:code), @enrollment.try(:child) %>
</p>

<p>
  <strong><%= tr("school_year") %>:</strong>
  <%= @enrollment.school_year %>
</p>

<% if @user && @user.can_access_sponsor? %>
<p>
  <strong><%= tr("sponsor") %>:</strong>
  <%= link_to "#{@enrollment.sponsor.try(:code)} - #{@enrollment.sponsor.try(:given_name)} #{@enrollment.sponsor.try(:family_name)}", @enrollment.sponsor %>
</p>
<% end %>

