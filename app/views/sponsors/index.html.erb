<h1>Listing Sponsors</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Donor Number</th>
      <th>Given Name</th>
      <th>Family Name</th>
      <th>Link</th>
      <th>City</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sponsors.each do |sponsor| %>
      <tr>
        <td><%= sponsor.code %></td>
        <td><%= sponsor.donor_number %></td>
        <td><%= sponsor.given_name %></td>
        <td><%= sponsor.family_name %></td>
        <td><%= sponsor.link %></td>
        <td><%= sponsor.city %></td>        
        <td><%= link_to 'Show', sponsor %></td>
        <td><%= link_to 'Edit', edit_sponsor_path(sponsor) %></td>
        <td><%= link_to 'Destroy', sponsor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sponsor', new_sponsor_path %>
