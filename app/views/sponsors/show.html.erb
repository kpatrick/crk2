<%= link_to tr('edit'), edit_sponsor_path(@sponsor) %> ::
<%= link_to tr('home'), {controller: :welcome, action: :index} %> ::
<%= link_to tr('sponsors'), {controller: :sponsors, action: :index} %>

<h1><%= tr('sponsor') %></h1>

<p id="notice"><%= notice %></p>

<p>
  <strong><%= tr('code') %>:</strong>
  <%= @sponsor.code %>
</p>

<p>
  <strong><%= tr('donor_number') %>:</strong>
  <%= @sponsor.donor_number %>
</p>

<p>
  <strong><%= tr('link') %>:</strong>
  <%= @sponsor.link %>
</p>

<p>
  <strong><%= tr('given_name') %>:</strong>
  <%= @sponsor.given_name %>
</p>

<p>
  <strong><%= tr('family_name') %>:</strong>
  <%= @sponsor.family_name %>
</p>

<p>
  <strong><%= tr('street_address') %>:</strong>
  <%= @sponsor.street_address %>
</p>

<p>
  <strong><%= tr('city') %>:</strong>
  <%= @sponsor.city %>
</p>

<p>
  <strong><%= tr('postal_code') %>:</strong>
  <%= @sponsor.postal_code %>
</p>

<p>
  <strong><%= tr('primary_email') %>:</strong>
  <%= @sponsor.primary_email %>
</p>

<p>
  <strong><%= tr('secondary_email') %>:</strong>
  <%= @sponsor.secondary_email %>
</p>

<p>
  <strong><%= tr('primary_phone') %>:</strong>
  <%= @sponsor.primary_phone %>
</p>

<p>
  <strong><%= tr('secondary_phone') %>:</strong>
  <%= @sponsor.secondary_phone %>
</p>
<br>

<h3><%= tr('sponsorships') %></h3>
<%= link_to tr('new'), {controller: :sponsorships, action: :new, sponsor_id: @sponsor.id} %>

<% if @sponsorships.present? %>
<table>
  <thead>
    <tr>
      <th><%= tr('school_year') %></th>
      <th><%= tr('number_children') %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sponsorships.each do |sponsorship| %>
      <tr>
        <td><%= sponsorship.school_year %></td>
        <td><%= sponsorship.number_children %></td>
        <td><%= link_to tr('show'), sponsorship %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
