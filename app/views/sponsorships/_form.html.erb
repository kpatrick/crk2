  sponsors_array.insert(0, ["", nil])
  %>
  <%= f.label :sponsor_id, t('sponsor') %><br><%= f.select(:sponsor_id, sponsors_array) %>
  </div>
  <div class="field">
    <%= f.label :number_children, 'Number of Children' %><br>
    <%= f.number_field :number_children %>
  </div>
  <div class="field">
    <%= f.label :dollar_amount, 'Dollar Amount' %><br>
    <%= f.number_field :dollar_amount %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
